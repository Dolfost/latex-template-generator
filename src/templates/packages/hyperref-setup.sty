\ProvidesExplPackage{packages/hyperref-setup}{2023--26--12}{1.0}{%
hyperref package setup.
}

\RequirePackage{hyperref}
\RequirePackage{xcolor}

\definecolor{linkcolor}{RGB}{80,80,80}
\hypersetup{%
	colorlinks=true,
	linkcolor=linkcolor,
	citecolor=linkcolor,
	raiselinks=true,
	pdfview=XYZ,
	pdfviewarea=TrimBox,
	linktocpage=true,
	anchorcolor=black,
	filecolor=cyan,
	urlcolor=magenta,
	frenchlinks=false, % Uses small caps for links instead of color
	bookmarksopen=false, % Shows all bookmarks in an expanded view
	bookmarksnumbered=false, % Includes the section number in bookmarks
	pdfstartpage=1, % Specifies which page would be shown when the PDF file is opened
}

\hypersetup{%
	pdfinfo = {%
		Title = Title,
		Author = \texorpdfstring{\studentname}{},
		Subject = \texorpdfstring{\university}{},
		Keywords = {LaTeX, typesetting},
		Producer = LuaTeX,
	}%
}%
